<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.productivity.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_goals"
        android:name="com.example.productivity.habits.HabitsFragment"
        android:label="Goals"
        tools:layout="@layout/fragment_habits" />

    <fragment
        android:id="@+id/nav_calendar"
        android:name="com.example.productivity.calendar.CalendarFragment"
        android:label="Calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/nav_games"
        android:name="com.example.productivity.GamesFragment"
        android:label="Game"
        tools:layout="@layout/fragment_games" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.productivity.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/editHabitsFragment"
        android:name="com.example.productivity.habits.edit.EditHabitsFragment"
        android:label="Редактирование привычек"
        tools:layout="@layout/fragment_edit_habits" />

    <fragment
        android:id="@+id/AddHabitsFragment"
        android:name="com.example.productivity.habits.AddHabitsFragment"
        android:label="Добавление привычек"
        tools:layout="@layout/fragment_add_habits" />
    <fragment
        android:id="@+id/AddTasksFragment"
        android:name="com.example.productivity.calendar.AddTasksFragment"
        android:label="Добавление задач"
        tools:layout="@layout/fragment_add_tasks" />

    <fragment
        android:id="@+id/editOneHabitFragment"
        android:name="com.example.productivity.habits.edit.EditOneHabitFragment"
        android:label="Редактировать привычку"
        tools:layout="@layout/fragment_edit_one_habit">
        <argument
            android:name="habitId"
            app:argType="integer" />
        <argument
            android:name="habitTitle"
            app:argType="string" />
        <argument
            android:name="iconResId"
            app:argType="integer" />
        <argument
            android:name="habitColor"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/editTaskFragment"
        android:name="com.example.productivity.calendar.EditTaskFragment"
        android:label="Редактировать задачу"
        tools:layout="@layout/fragment_edit_task">
        <argument
            android:name="taskId"
            app:argType="integer" />
        <argument
            android:name="taskTitle"
            app:argType="string" />
        <argument
            android:name="taskDate"
            app:argType="string" />
        <argument
            android:name="taskTime"
            app:argType="string" />
        <argument
            android:name="taskImportance"
            app:argType="integer" />
        <argument
            android:name="taskCompleted"
            app:argType="boolean" />
    </fragment>



</navigation>
